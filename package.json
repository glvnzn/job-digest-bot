{
  "name": "job-digest-bot",
  "version": "1.0.0",
  "description": "Automated job alert curation and notification system",
  "main": "dist/api/main.js",
  "scripts": {
    "build": "npx nx run-many --target=build --all",
    "build:api": "npx nx build api",
    "build:web": "npx nx build web",
    "start": "node dist/api/main.js",
    "start:api": "npx nx serve api",
    "start:web": "npx nx start web",
    "dev": "npx nx run-many --target=dev --all --parallel",
    "dev:api": "npx nx serve api",
    "dev:web": "npx nx dev web",
    "lint": "npx nx run-many --target=lint --all",
    "lint:api": "npx nx lint api",
    "lint:web": "npx nx lint web",
    "lint:fix": "npx nx run-many --target=lint --all --fix",
    "format": "npx nx format:write",
    "format:check": "npx nx format:check",
    "test": "npx nx run-many --target=test --all",
    "test:api": "npx nx test api",
    "test:web": "npx nx test web",
    "type-check": "npx nx run-many --target=type-check --all",
    "type-check:api": "npx nx run api:build --dry-run",
    "type-check:web": "npx nx run web:build --dry-run",
    "generate-gmail-token": "node apps/api/src/utils/gmail-token-generator.js",
    "nx:graph": "npx nx graph",
    "nx:reset": "npx nx reset",
    "postinstall": "npx nx --version"
  },
  "dependencies": {
    "bullmq": "^5.56.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^126.0.1",
    "ioredis": "^5.7.0",
    "next": "~15.2.4",
    "node-cron": "^3.0.3",
    "node-telegram-bot-api": "^0.64.0",
    "openai": "^4.28.4",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nx/devkit": "21.3.11",
    "@nx/esbuild": "21.3.11",
    "@nx/eslint": "^21.3.11",
    "@nx/js": "^21.3.11",
    "@nx/next": "^21.3.11",
    "@nx/node": "^21.3.11",
    "@nx/playwright": "^21.3.11",
    "@nx/react": "^21.3.11",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.17",
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/pdf-parse": "^1.1.4",
    "@types/pg": "^8.10.9",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nx": "^21.3.11",
    "prettier": "^3.6.2",
    "tsx": "^4.7.1",
    "typescript": "~5.8.2"
  },
  "engines": {
    "node": ">=18"
  }
}
