{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "types": ["node"],
    "declaration": false,
    "declarationMap": false,
    "noImplicitReturns": false,
    "strictNullChecks": false,
    "strict": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}
