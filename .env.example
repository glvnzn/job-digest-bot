# ==============================================
# API APPLICATION ENVIRONMENT VARIABLES
# ==============================================

# Gmail API (OAuth2 for email processing)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# OpenAI API (for job classification and resume analysis)
OPENAI_API_KEY=your_openai_api_key

# Telegram Bot (for notifications and commands)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Database (PostgreSQL via Prisma)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Application Configuration
NODE_ENV=production
PORT=3333

# Queue & Redis (for background job processing)
REDIS_URL=redis://localhost:6379

# Authentication & Security
JWT_SECRET=your-jwt-secret-key
DISABLE_AUTH=false
ADMIN_EMAIL=admin@yourcompany.com

# ==============================================
# EMAIL ORGANIZATION CONFIGURATION (NEW)
# ==============================================

# Feature toggles
EMAIL_ORGANIZATION_ENABLED=true          # Enable/disable email organization for non-job emails
EMAIL_CREATE_LABELS=true                 # Create Gmail labels for organization
EMAIL_APPLY_ACTIONS=true                 # Apply email actions (mark read/archive)
EMAIL_DRY_RUN=false                      # Test mode - log actions without executing

# Classification settings  
EMAIL_RULE_CONFIDENCE_THRESHOLD=0.8      # Minimum confidence for rule-based classification (0.0-1.0)
EMAIL_AI_FALLBACK=true                   # Use AI for low-confidence emails

# Cost controls
EMAIL_MAX_AI_COST_PER_RUN=0.10          # Maximum AI spending per processing run ($)
EMAIL_AI_COST_PER_EMAIL=0.002           # Estimated cost per AI classification ($)

# Behavioral overrides
EMAIL_AUTO_ARCHIVE_NEWSLETTERS=true      # Auto-archive newsletter emails  
EMAIL_AUTO_ARCHIVE_PROMOTIONS=true       # Auto-archive promotional emails
EMAIL_KEEP_SECURITY_UNREAD=true          # Keep security emails unread (important)
EMAIL_KEEP_FINANCE_UNREAD=true           # Keep finance emails unread (important)

# Performance settings
EMAIL_PROCESSING_DELAY_MS=100            # Delay between email actions (ms)  
EMAIL_AI_DELAY_MS=200                    # Delay between AI requests (ms)
EMAIL_ACTION_BATCH_SIZE=1                # Process emails in batches

# Logging & debugging
EMAIL_DETAILED_LOGGING=false             # Enable detailed classification logging
EMAIL_LOG_RESULTS=false                  # Log all classification results  
EMAIL_LOG_ACTIONS=false                  # Log all Gmail actions

# ==============================================
# WEB APPLICATION ENVIRONMENT VARIABLES
# ==============================================

# API Connection (for frontend to connect to API)
NEXT_PUBLIC_API_URL=https://job-digest-bot-production.up.railway.app

# NextAuth Configuration (authentication)
NEXTAUTH_URL=https://your-web-app-url.vercel.app
NEXTAUTH_SECRET=your-nextauth-secret-key

# Google OAuth (for web app user authentication)
GOOGLE_CLIENT_ID=your_web_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_web_google_oauth_client_secret

# ==============================================
# DEVELOPMENT SETUP INSTRUCTIONS
# ==============================================
# 
# For local development, create a .env.local file with:
#   NEXT_PUBLIC_API_URL=http://localhost:3333
#   NEXTAUTH_URL=http://localhost:3000
#   NEXTAUTH_SECRET=development-secret-key
#   GOOGLE_CLIENT_ID=your_dev_google_client_id
#   GOOGLE_CLIENT_SECRET=your_dev_google_client_secret
#
# The .env.local file is automatically ignored by git